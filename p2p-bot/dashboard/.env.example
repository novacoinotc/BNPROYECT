# Use direct (non-pooled) connection for migrations (ends with .region.neon.tech, without -pooler)
DIRECT_URL=postgresql://user:pass@host.region.neon.tech/neondb?sslmode=require

# Railway API URL (server-side only)
RAILWAY_API_URL=https://your-railway-app.up.railway.app

# Railway API URL (client-side for SSE real-time updates)
NEXT_PUBLIC_RAILWAY_API_URL=https://your-railway-app.up.railway.app
